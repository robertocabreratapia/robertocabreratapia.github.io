      /* CSS Inline para el ejemplo, se recomienda moverlo a main.css */
      body {
        font-family: Arial, sans-serif; /* Fuente general */
        margin: 0; /* Eliminar márgenes predeterminados */
        padding: 0; /* Eliminar relleno predeterminado */
      }

      .wrapper {
        max-width: 800px; /* Ancho máximo del contenido */
        margin: 0 auto; /* Centrar contenido */
        padding: 20px; /* Espaciado interno */
      }

      header {
        text-align: center; /* Centrar el texto del encabezado */
      }

      header h1 {
        margin: 0; /* Eliminar márgenes del h1 */
        font-size: 2em; /* Tamaño de la fuente del encabezado ajustado */
      }

      header h1 a {
        display: block; /* Hacer que cada línea sea un bloque */
        font-size: 2em; /* Tamaño de la fuente del encabezado ajustado */
        color: #000; /* Color del texto */
        text-decoration: none; /* Sin subrayado */
      }

      header h1 a:hover {
        color: #007bff; /* Cambiar color al pasar el ratón */
      }

      nav ul {
        list-style-type: none; /* Eliminar puntos de lista */
        padding: 0; /* Eliminar relleno */
      }

      nav ul li {
        display: inline; /* Mostrar elementos en línea */
        margin: 0 10px; /* Espaciado entre elementos */
      }

      footer {
        text-align: center; /* Centrar texto en el pie de página */
        margin-top: 20px; /* Espacio arriba del pie de página */
      }

      footer p {
        margin: 5px 0; /* Espaciado vertical en los párrafos del pie */
      }
    </style>
